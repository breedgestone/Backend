# Application
APP_PORT=3000
APP_GLOBAL_PREFIX=api/v1

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_DATABASE=breedgestone

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# Email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@breedgestone.com

# Google OAuth
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/oauth/google/callback

# Facebook OAuth
OAUTH_FACEBOOK_APP_ID=your-facebook-app-id
OAUTH_FACEBOOK_APP_SECRET=your-facebook-app-secret
OAUTH_FACEBOOK_CALLBACK_URL=http://localhost:3000/api/v1/auth/oauth/facebook/callback

# Firebase (Optional - for push notifications)
FIREBASE_SERVICE_ACCOUNT_KEY={}

# CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true
